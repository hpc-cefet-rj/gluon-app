<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonhq.notesapp.views.FilterPresenter">
   <children>
      <ToolBar fx:id="toolbar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <items>
            <TextField fx:id="searchField" promptText="Search note" />
          <Button mnemonicParsing="false" onAction="#search">
               <graphic>
                  <Icon content="SEARCH" />
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#close">
               <graphic>
                  <Icon content="CLEAR" />
               </graphic>
            </Button>
        </items>
      </ToolBar>
   </children>
</AnchorPane>
